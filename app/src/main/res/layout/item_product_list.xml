<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#EAE8FF"
    android:weightSum="2">

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:weightSum="5"
                android:layout_gravity="center_vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtProductIdC"/>

                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:id="@+id/txtProductNameC"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:id="@+id/txtManufacturerNameC"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:id="@+id/txtCategoryNameC"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:id="@+id/txtPriceC"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <Button
                    android:layout_weight="0.35"
                    android:id="@+id/btnPlusQtty"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:text="+" />

                <TextView
                    android:id="@+id/txtQuantity"
                    android:textAlignment="center"
                    android:layout_weight="0.3"
                    android:text="1"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content" />

                <Button
                    android:layout_weight="0.35"
                    android:id="@+id/btnMinusQtty"
                    android:text="-"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>

</android.widget.LinearLayout>